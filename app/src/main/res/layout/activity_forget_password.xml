<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:paddingTop="34dp"
        android:paddingLeft="12dp"
        android:paddingRight="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_return"/>
    <TextView
        android:paddingTop="45dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textSize="28dp"
        android:textColor="#030634"/>
    <LinearLayout
        android:paddingTop="84dp"
        android:paddingLeft="37dp"
        android:paddingRight="37dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="#030634"
            android:textSize="16dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入注册手机号码"
            android:paddingTop="16dp"
            style="@style/common_editText_style"
            android:inputType="number"
            android:textSize="16dp"/>
        <View
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D9DFE5"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:background="@drawable/shape_common_bule_btn_pressed"
            android:gravity="center_horizontal"
            android:paddingBottom="17dp"
            android:paddingTop="17dp"
            android:text="发送验证码"
            android:textColor="@drawable/tab_text_bg"
            android:textSize="20dp"/>
    </LinearLayout>


</LinearLayout>
