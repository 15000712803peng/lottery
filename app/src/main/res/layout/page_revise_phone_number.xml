<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="#F9FAFB">
    <include layout="@layout/back_title"/>
    <LinearLayout
    android:background="#FFFFFF"
    android:layout_marginTop="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:paddingLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号"
        android:textSize="15dp"
        android:textColor="#030634"
        android:paddingRight="15dp"/>
    <EditText
        style="@style/common_editText_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:hint="13916263854"
        android:textSize="15dp"
        android:textColor="#030634"
        android:textColorHint="#9EA9B7"
        android:inputType="text"/>
    <ImageView
        android:layout_gravity="center"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_delete"/>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9DFE5"/>
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textSize="15dp"
            android:textColor="#030634"
            android:paddingRight="15dp"/>
        <EditText
            style="@style/common_editText_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:hint="98762"
            android:textSize="15dp"
            android:textColor="#030634"
            android:textColorHint="#9EA9B7"
            android:inputType="text"/>
        <Button
            android:background="@drawable/common_gary_button_bg"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:text="获取验证码"
            android:textColor="#FFFFFF"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_delete"/>
    </LinearLayout>
</LinearLayout>
