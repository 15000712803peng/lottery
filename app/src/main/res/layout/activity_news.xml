<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/title"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:clickable="true"
                    android:onClick="back"
                    android:padding="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/icon_return"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:layout_alignParentRight="true"
                    android:padding="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/icon_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </RelativeLayout>
            <View
                android:background="@drawable/tab_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>

        <ScrollView
            android:layout_below="@id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@color/white"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="把中国队的一名前锋换成梅西，其他位置的球员不变，中国队会有怎样的成绩？"
                        android:textSize="20sp"
                        android:textColor="#050736"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:paddingBottom="16dp"
                    android:layout_marginTop="16sp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:id="@+id/news_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:paddingRight="12dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="top"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
          <FrameLayout
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="wrap_content" >
              <EditText
                  android:background="@mipmap/edit_comment"
                  android:paddingLeft="8dp"
                  android:paddingTop="10dp"
                  android:hint="添加一条评论"
                  android:paddingBottom="10dp"

                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
          </FrameLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_marginLeft="22dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:paddingTop="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/comment"
                            android:src="@mipmap/icon_news_comment"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <TextView

                            android:textColor="#030634"
                            android:text="评论"
                            android:textSize="10sp"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:layout_marginLeft="14dp"
                        android:textColor="#030634"
                        android:textSize="8sp"
                        android:text="7793"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginLeft="9dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:paddingTop="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView

                            android:src="@mipmap/icon_zan"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <TextView

                            android:textColor="#030634"
                            android:text="赞"
                            android:textSize="10sp"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>





        </LinearLayout>

    </RelativeLayout>




</LinearLayout>