<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:paddingTop="34dp"
        android:paddingLeft="12dp"
        android:paddingRight="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_return"/>
    <LinearLayout
        android:paddingLeft="37dp"
        android:paddingRight="37dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:paddingTop="21dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码已发送至 "
                android:textSize="16dp"
                android:textColor="#030634"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13916263854"
                android:textSize="16dp"
                android:textColor="#030634"/>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="79dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="#030634"
                android:textSize="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <EditText
                style="@style/common_editText_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="四位"
                android:paddingTop="16dp"
                android:textSize="16dp"
                android:inputType="number"/>
                <Button
                    android:paddingTop="12dp"
                    android:paddingBottom="22dp"
                    android:paddingLeft="17dp"
                    android:paddingRight="17dp"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:text="获取验证码"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_gary_button_bg"/>
            </LinearLayout>
            <View
                android:paddingTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D9DFE5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                android:text="密码"
                android:textColor="#030634"
                android:textSize="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    style="@style/common_editText_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="至少六位"
                    android:paddingTop="16dp"
                    android:textSize="16dp"
                    android:inputType="textPassword"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:src="@mipmap/icon_invisible" />
            </LinearLayout>

            <View
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D9DFE5"/>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
           <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收不到短信？"
            android:textColor="#4D6786"
            android:textSize="14dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取语音验证码"
                    android:textColor="#4D6786"
                    android:textSize="14dp"/>
                <View
                    android:layout_width="103dp"
                    android:layout_height="1dp"
                    android:background="#002B38"/>
            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:background="@drawable/common_button_bg"
            android:gravity="center"
            android:paddingBottom="17dp"
            android:paddingTop="17dp"
            android:text="登 录"
            android:textColor="#FFFFFF"
            android:textSize="20dp"/>
    </LinearLayout>


</LinearLayout>
